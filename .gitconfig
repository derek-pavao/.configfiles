[user]
	name = Derek Pavao
	email = dpavao@astonish.com

[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
        pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/dpavao/.gitignore

[alias]
        co = checkout
	st = status -s
	ci = commit
	w = whatchanged
	br = branch
	l = log --decorate --pretty=oneline --abbrev-commit
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lols = log --graph --decorate --pretty=oneline --abbrev-commit --max-count=10
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	standup = log --since '1 day ago' --oneline --author dpavao@astonish.com
        ph = !git push && python -m pushroulette

[core]
	editor = emacs
[merge]
        keepBackup = false
        tool = p4merge
[mergetool "p4merge"]
        keepTemporaries = false
        trustExitCode = false
        keepBackup = false
        cmd = /Applications/p4merge.app/Contents/MacOS/p4merge "$PWD/$BASE" "$PWD/$REMOTE" "$PWD/$LOCAL" "$PWD/$MERGED"

[pull]
	rebase = true
[push]
	default = simple
